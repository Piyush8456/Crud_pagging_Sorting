@model IEnumerable<UoW_Repository.Models.ViewModel.EmployeesViewModel>



@{
    ViewBag.Title = "Index";
}

<style>
    html,
    body {
        height: 100%;
    }

    body {
        margin: 0;
        background: linear-gradient(45deg, #49a09d, #5f2c82);
        font-family: sans-serif;
        font-weight: 100;
    }

    .container {
        position: relative;
        margin: 0 auto; /* Center horizontally */
        max-width: 800px; /* Set maximum width */
        padding: 0 15px; /* Add padding for better layout */
        box-sizing: border-box;
    }

    table {
        margin: 0 auto; /* Center horizontally */
        border-collapse: collapse;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 1200px;
    }

    .pagination {
        display: flex;
        justify-content: center;
        width: 100%;
        max-width: 1200px;
        margin-top: 20px;
    }

        .pagination button {
            font-size: 1.5em;
            margin: 0 5px;
        }

    th,
    td, {
        padding: 15px;
        background-color: rgba(255,255,255,0.2) !important;
        color: #fff;
    }

    th {
        text-align: left !important;
    }

    thead th {
        background-color: #55608f !important;
    }

    tbody tr:hover {
        background-color: rgba(255,255,255,0.3) !important;
    }

    td {
        position: relative;
    }

        td:hover::before {
            content: "";
            position: absolute;
            left: 0;
            right: 0;
            top: -9999px;
            bottom: -9999px;
            background-color: rgba(255,255,255,0.2) !important;
            z-index: -1;
        }

    .form-select {
        background-color: rgba(255,255,255,0.2);
    }

    .currentPage {
        background-color: #212529 !important;
        color: white !important;
    }

    tbody tr {
        padding: 15px;
        background-color: rgba(255,255,255,0.2) !important;
        color: #fff;
    }

        tbody tr:hover {
            background-color: rgba(255,255,255,0.3) !important;
        }

    .myClass {
        background-color: rgba(255,255,255,0.2) !important;
    }
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<h2>Index</h2>
<div class="row" style="display:inline">
    <p style="display:inline">
        @Html.ActionLink("Create New", "InsertData", null, new { style = "color:darkblue;" })
    </p>

    <p style="display:inline">
        @Html.ActionLink("Data From SP", "Sp_Data", null, new { style = "color:darkblue;" })
    </p>
</div>

<table class="table">

    <tr>
        <th>
            <label>Id</label>
        </th>
        <th>
            <label>Firstname</label>
        </th>
        <th>
            <label>Lastname</label>
        </th>
        <th>
            <label>Age</label>
        </th>
        <th>
            <label>Gender</label>
        </th>
        <th>
            <label>Mobile Number</label>
        </th>
        <th>
            <label>Email</label>
        </th>
        <th>
            <label>Designation</label>
        </th>
        <th>
            <label>Joining Date</label>
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        foreach (var employee in item.FilteredResult)
        {
            <tr class="myClass">
                <td>
                    @Html.DisplayFor(modelItem => employee.employeeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => employee.firstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => employee.lastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => employee.age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => employee.gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => employee.mobileNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => employee.email)
                </td>
                <td>
                    @if (employee.employeeType == 1)
                    {
                        <p> FrontEnd Devloper</p>
                    }
                    @if (employee.employeeType == 2)
                    {
                        <p> BackEnd Devloper</p>
                    }

                    @if (employee.employeeType == 3)
                    {
                        <p>Designer</p>
                    }
                    @if (employee.employeeType == 4)
                    {
                        <p>Tester</p>
                    }
                    @if (employee.employeeType == 5)
                    {
                        <p>BDE</p>
                    }
                    @if (employee.employeeType == 6)
                    {
                        <p>HR</p>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => employee.joiningDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = employee.employeeId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = employee.employeeId }, new { onclick = "return confirm('Are you sure you want to delete this record?');" })
                </td>
            </tr>
        }
    }
</table>
